<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F5ECCE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <Button
                android:background="@drawable/sossetting"
                android:id="@+id/btn_sossetup"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginRight="30dp"

            android:layout_gravity="left"
            android:onClick="onclick_gosos"
            android:id="@+id/btn_gosos"
            android:background="@drawable/msg_help"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <Button
            android:background="@drawable/call_help"
            android:onClick="onclick_gososcall"
            android:id="@+id/btn_gososcall"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>


    <View
        android:layout_marginBottom="10dp"
        android:background="#ff000f"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


    <TextView
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:text="이름 :"
        android:id="@+id/tv_sosname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:text="전화번호 :"
        android:id="@+id/tv_sosphonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20dp"
        android:text="비상메세지 : "
        android:id="@+id/tv_sosmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>